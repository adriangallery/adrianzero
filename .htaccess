RewriteEngine On

# Redirect /traitcreator to traitcreator-iframe/index.html
RewriteRule ^traitcreator/?$ traitcreator-iframe/index.html [L]

# Redirect /traitcreator/ to traitcreator-iframe/index.html
RewriteRule ^traitcreator/$ traitcreator-iframe/index.html [L]

# Handle subdirectories under traitcreator
RewriteRule ^traitcreator/(.*)$ traitcreator-iframe/index.html [L]

# Ensure CNAME works
RewriteCond %{HTTP_HOST} ^adrianzero\.com$ [NC]
RewriteRule ^(.*)$ https://adrianzero.com/$1 [R=301,L] 
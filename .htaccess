RewriteEngine On

# Redirect /traitcreator to Vercel DApp
RewriteRule ^traitcreator/?$ https://traitcreator-app.vercel.app/ [R=302,L]

# Redirect /traitcreator/ to Vercel DApp
RewriteRule ^traitcreator/$ https://traitcreator-app.vercel.app/ [R=302,L]

# Handle subdirectories under traitcreator
RewriteRule ^traitcreator/(.*)$ https://traitcreator-app.vercel.app/$1 [R=302,L]

# Ensure CNAME works
RewriteCond %{HTTP_HOST} ^adrianzero\.com$ [NC]
RewriteRule ^(.*)$ https://adrianzero.com/$1 [R=301,L] 
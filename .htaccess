RewriteEngine On

# Redirect /traitcreator to traitcreator/index.html
RewriteRule ^traitcreator/?$ traitcreator/index.html [L]

# Redirect /traitcreator/ to traitcreator/index.html
RewriteRule ^traitcreator/$ traitcreator/index.html [L]

# Handle subdirectories under traitcreator
RewriteRule ^traitcreator/(.*)$ traitcreator/index.html [L]

# Ensure CNAME works
RewriteCond %{HTTP_HOST} ^adrianzero\.com$ [NC]
RewriteRule ^(.*)$ https://adrianzero.com/$1 [R=301,L] 